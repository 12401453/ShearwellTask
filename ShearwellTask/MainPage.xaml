<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShearwellTask.MainPage"
             BackgroundColor="#172136">
    <Grid RowDefinitions=".5*, .5*" ColumnDefinitions="*">

        <Button Grid.Row="0" 
                Text="Groups"
                BackgroundColor="#071022"
                HeightRequest="70"
                WidthRequest="140"
                BorderColor="Black"
                BorderWidth="2"
                Pressed="GroupsButtonPressed"
                TextColor="#cbd9f4"
                FontAttributes="Bold"/>
        <Button Grid.Row="1"
                Text="Animals"
                BackgroundColor="#071022"
                HeightRequest="70"
                WidthRequest="140"
                BorderColor="Black"
                BorderWidth="2"
                Pressed="AnimalsButtonPressed"
                TextColor="#cbd9f4"
                FontAttributes="Bold"/>


    </Grid>
</ContentPage>